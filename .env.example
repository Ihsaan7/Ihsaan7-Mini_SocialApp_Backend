# Environment Variables for Development/Production
NODE_ENV=development
PORT=8000

# Database Configuration
# For local development: mongodb://127.0.0.1:27017/socialApp
# For production: your_mongodb_connection_string_here
MONGODB_URI=mongodb://127.0.0.1:27017/socialApp

# JWT Secret - Random 64 character string (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random_for_security

# Session Secret - Random 64 character string  
SESSION_SECRET=your_super_secret_session_key_here_make_it_long_and_random_too

# Bcrypt Salt Rounds
SALT_ROUNDS=10

# Upload Directory
UPLOAD_DIR=public/images/uploads

# Cookie Settings
COOKIE_MAX_AGE=86400000
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100